<UserControl x:Class="YearProgress.YearProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YearProgress"
             xmlns:xrpb="http://XamlRadialProgressBar/DotNet"
             mc:Ignorable="d">
    <Viewbox>
        <WrapPanel>
            <local:CircleProgressBar x:Name="YearProgressBar" Width="40" Height="40"/>
            <local:CircleProgressBar x:Name="MonthProgressBar" Width="40" Height="40" Margin="20 0 0 0"/>
            <local:CircleProgressBar x:Name="DayProgressBar" Width="40" Height="40" Margin="20 0 0 0"/>
        </WrapPanel>
    </Viewbox>
</UserControl>
